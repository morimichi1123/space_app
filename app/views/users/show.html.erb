<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        | <%= link_to "delete", @user, method: :delete,  data: { confirm: "You sure?" } %>
      </h1>
    </section>
  </aside>
</div>