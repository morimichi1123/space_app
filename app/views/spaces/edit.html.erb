<% provide(:title, "Space Information") %>
<h1>Update Space Information</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@space) do |f| %>
      <%= render 'shared/error_space_messages' %>

      <%= f.label :space_name %>
      <%= f.text_field :space_name, class: 'form-control' %>

      <%= f.label :ward_id %>
      <%= f.text_field :ward_id, class: 'form-control' %>

      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>

      <%= f.submit "Update!", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
